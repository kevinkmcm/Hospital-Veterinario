@page
@using HospiEnCasa.App.Dominio;
@model HospiEnCasa.App.Frontend.Pages.Familiares.EliminarModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>hospital veterinario</title>
    <h1> Eliminar Familiar</h1>
    <meta name="viewport" content="width device.width, user-scalable=1.0, inicial-scalable=1.0, maximun-scalable=1.0,minimun-scalable=1.0">
    <link rel="stylesheet" href="~/css/stylos.css">
    <script type="text/javascript">
        function ConfirmDelete() {
            var respuesta = confirm("seguro deseas eliminar al familiar? ");
            if (respuesta == true) {
                return true;
            }
            else {
                return false;
            }

        }
    </script>
</head>
<body>

    <form method="post">

        <div class="form-group">
            <label asp-for="familiarDesignado.Nombre"></label>
            <input asp-for="familiarDesignado.Nombre" class="form-control" required="required">
        </div>

        <div class="form-group">
            <label asp-for="familiarDesignado.Apellidos"></label>
            <input asp-for="familiarDesignado.Apellidos" class="form-control" required="required">
        </div>

        <div class="form-group">
            <label asp-for="familiarDesignado.NumeroTelefono"></label>
            <input asp-for="familiarDesignado.NumeroTelefono" class="form-control" required="required">
        </div>

        <div class="form-group">
            <label asp-for="familiarDesignado.Correo"></label>
            <input asp-for="familiarDesignado.Correo" class="form-control" required="required">
        </div>

        <div class="form-group">
            <label asp-for="familiarDesignado.Genero"></label>
            <select asp-for="familiarDesignado.Genero" asp-items="Html.GetEnumSelectList<Genero>()" class="form-control" required="required"></select>
        </div><br>

        <br>

        <button type="submit" class="btn btn-primary" onclick="return ConfirmDelete()">Eliminar</button>

    </form>
</body>
</html>
