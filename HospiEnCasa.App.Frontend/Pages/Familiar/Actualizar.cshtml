@page
@model HospiEnCasa.App.Frontend.Familiar.ActualizarModel
@{
}

<h1>Actualizar Familiar Designado</h1>

<form method="post">

    <div class="form-group">
        <label asp-for="familiar.Nombre"></label>
        <input asp-for="familiar.Nombre" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="familiar.Apellidos"></label>
        <input asp-for="familiar.Apellidos" class="form-control" required="required">
    </div>

     <div class="form-group">
        <label asp-for="familiar.NumeroTelefono"></label>
        <input asp-for="familiar.NumeroTelefono" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="familiar.Correo"></label>
        <input asp-for="familiar.Correo" class="form-control" required="required">
    </div>

    <select name="Genero">
        <option value="Masculino">Value 1</option>
        <option value="Femenino" selected>Value 2</option>
    </select>

    <select name="parentesco">
        <option value="Dueño">Value 1</option>
        <option value="Encargado" selected>Value 2</option>
        <option value="Familiar del dueño">Value 3</option>
    </select>

    <button type="submit" class="btn btn-primary">Actualizar</button>


</form>
