@page
@model HospiEnCasa.App.Frontend.Pages.Familiares.ActualizarModel
@{
}

<h1>Actualizar familiar Designado </h1>

<form method="post">

    <div class="form-group">
        <label asp-for="FamiliarDesignado.Id"></label>
        <input asp-for="FamiliarDesignado.Id" class="form-control" required="required">
    </div>


    <div class="form-group">
        <label asp-for="FamiliarDesignado.Nombre"></label>
        <input asp-for="FamiliarDesignado.Nombre" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="FamiliarDesignado.Apellidos"></label>
        <input asp-for="FamiliarDesignado.Apellidos" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="FamiliarDesignado.NumeroTelefono"></label>
        <input asp-for="FamiliarDesignado.NumeroTelefono" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="FamiliarDesignado.Correo"></label>
        <input asp-for="FamiliarDesignado.Correo" class="form-control" required="required">
    </div>

    <select name="Genero">
        <option value="Masculino">Value 1</option>
        <option value="Femenino" selected>Value 2</option>
    </select>

    <select name="parentesco">
        <option value="Dueño">Value 1</option>
        <option value="Encargado" selected>Value 2</option>
        <option value="familiar del dueño">Value 3</option>
    </select>

    <button type="submit" class="btn btn-primary">Actualizar</button>


</form>
