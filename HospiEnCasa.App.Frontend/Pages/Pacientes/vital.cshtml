@page
@using HospiEnCasa.App.Dominio;
@model HospiEnCasa.App.Frontend.Pacientes.vitalModel
@{
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>hospital veterinario</title>
    <h1>Registro del signo vital </h1>
    <meta name="viewport" content="width device.width, user-scalable=1.0, inicial-scalable=1.0, maximun-scalable=1.0,minimun-scalable=1.0">
    <link rel="stylesheet" href="~/css/stylos.css">
</head>
<body>

    <form>

        <div class="form-group">
            <label asp-for="paciente.Id"></label>
            <input asp-for="paciente.Id" class="form-control" readonly>
        </div>

        <div class="form-group">
            <label asp-for="paciente.Nombre"></label>
            <input asp-for="paciente.Nombre" class="form-control" readonly>
        </div>

        <div class="form-group">
            <label asp-for="paciente.Raza"></label>
            <input asp-for="paciente.Raza" class="form-control" readonly>
        </div>

        <div class="form-group">
            <label asp-for="signo.FechaHora"></label>
            <input asp-for="signo.FechaHora" class="form-control" required="required">
        </div>

        <div class="form-group">
            <label asp-for="signo.Signo"></label>
            <select asp-for="signo.Signo" asp-items="Html.GetEnumSelectList<TipoSigno>()" class="form-control" required="required"></select>
        </div>

        <div class="form-group">
            <label asp-for="signo.Valor"></label>
            <input type="number" asp-for="signo.Valor" class="form-control" required="required">
        </div>

        <br>

        <button type="submit" class="btn btn-primary">Agregar Signos</button>
    </form>
</body>
</html>
