@page
@model HospiEnCasa.App.Frontend.Pages.Pacientes.ActualizarModel
@{
}
<h1> Actualizacion de datos del paciente</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="paciente.Id" ></label>
        <input asp-for="paciente.Id" class="form-control" readonly>
    </div>

    <div class="form-group">
        <label asp-for="paciente.Nombre" ></label>
        <input asp-for="paciente.Nombre " class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Raza"></label>
        <input asp-for="paciente.Raza" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Edad"></label>
        <input asp-for="paciente.Edad" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Color"></label>
        <input asp-for="paciente.Color" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Direccion"></label>
        <input asp-for="paciente.Direccion" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Latitud"></label>
        <input asp-for="paciente.Latitud" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Longitud"></label>
        <input asp-for="paciente.Longitud" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Ciudad"></label>
        <input asp-for="paciente.Ciudad" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.Fecha_Nacimiento"></label>
        <input asp-for="paciente.Fecha_Nacimiento" class="form-control" required="required">
    </div>

    <div class="form-group">
        <label asp-for="paciente.FamiliarDesignado"></label>
        <input asp-for="paciente.FamiliarDesignado" class="form-control" required="required">
    </div>

    <select name="Tipo">
        <option value="Perro">Value 1</option>
        <option value="Gato" selected>Value 2</option>
    </select>

    <label><input type="checkbox" id="cbox1" value="first_checkbox"> Si pedegree</label><br>

    <input type="checkbox" id="cbox2" value="second_checkbox"> <label for="cbox2">No pedegree</label>


    <button type="submit" class="btn btn-primary">Actualizar</button>

</form>
